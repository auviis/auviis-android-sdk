<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.auviis.example.MainActivity">

    <TextView
        android:id="@+id/txtChatContent"
        android:layout_width="372dp"
        android:layout_height="183dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:gravity="start|top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btStart"
        android:layout_width="166dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="36dp"
        android:onClick="startSDK"
        android:text="One click start"
        app:layout_constraintBottom_toTopOf="@+id/swFreeTalk"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btStop"
        android:layout_width="166dp"
        android:layout_height="61dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:onClick="stopSDK"
        android:text="One click stop"
        app:layout_constraintBottom_toTopOf="@+id/btPushToTalk"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/swFreeTalk"
        android:layout_width="157dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="32dp"
        android:text="FreeTalk"
        app:layout_constraintBottom_toTopOf="@+id/btVoiceMsg"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btPushToTalk"
        android:layout_width="160dp"
        android:layout_height="62dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:text="Push To Talk"
        app:layout_constraintBottom_toTopOf="@+id/btVoiceMsg"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btSpeakerOut"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="84dp"
        android:onClick="speakerOut"
        android:text="Speaker Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btMicOut"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="84dp"
        android:onClick="micOut"
        android:text="Mic Out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btVoiceMsg"
        android:layout_width="199dp"
        android:layout_height="61dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="36dp"
        android:text="Push for Voice Msg"
        app:layout_constraintBottom_toTopOf="@+id/btSpeakerOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>